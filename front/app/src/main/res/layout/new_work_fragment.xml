<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.work.NewWorkFragment"
    android:orientation="vertical">

    <EditText
        android:id="@+id/edit_work_name"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="#ffffff"
        android:drawablePadding="16dp"
        android:singleLine="true"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="@string/input_work_name"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:background="#cccccc" />

    <EditText
        android:id="@+id/edit_first_flow_description"
        android:layout_width="match_parent"
        android:layout_height="96dp"
        android:background="#ffffff"
        android:drawablePadding="16dp"
        android:singleLine="true"
        android:ems="10"
        android:scrollbars="vertical"
        android:minLines="2"
        android:gravity="top"
        android:inputType="textMultiLine"
        android:hint="@string/input_work_description" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:background="#cccccc" />

    <LinearLayout
        android:id="@+id/ll1"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="60dp">
        <TextView
            android:text="工作私密性"
            android:textSize="20dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textColor="#000000"
            android:layout_weight="1"
            android:layout_marginLeft="12dp"
            android:gravity="center_vertical"/>

        <TextView
            android:id="@+id/value_of_confidential"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"/>

        <ImageView
            android:layout_gravity="center_vertical"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:paddingRight="20dp"
            android:src="@drawable/rightarrow"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:background="#cccccc" />

    <Button
        android:id="@+id/create_work"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="新建工作" />

</LinearLayout>